{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
